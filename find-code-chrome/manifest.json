{
  "manifest_version": 3,
  "name": "Find Code",
  "version": "1.0.0",
  "description": "Click on elements to find their code location in VSCode",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["http://localhost/*", "https://localhost/*"],
  "content_scripts": [
    {
      "matches": ["http://localhost/*", "https://localhost/*"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Find Code"
  }
}
